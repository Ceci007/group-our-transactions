<h2 class="text-center">New Category</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :category, url: categories_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :name %>
                           <%= f.text_field :name, autofocus: true, autocomplete: 'category name', placeholder: "Category name" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                         <%= f.select :icon, options_for_select(["None", "cutlery", "building", "home", "bath"]), {}, class: "custom-select mb-1" %>
                     </div>
                     <div class="form-group">
                          <%= f.submit "New Category", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
    </div>
</div>