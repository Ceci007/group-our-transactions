<div class="d-flex justify-content-center text-light align-items-end">
    <h4 class="font-weight-light">LOGIN</h4>
</div>
<%= render 'layouts/flash' %>
<h2 class="text-center">Login</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :session, url: login_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :username %>
                           <%= f.text_field :username, autofocus: true, autocomplete: 'user name', placeholder: "User name" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                        <label for="email"><%= f.label :email %></label>
                        <%= f.email_field :email, class: "form-control shadow rounded", id: "email", placeholder: "Enter your email address" %>
                     </div>
                     <div class="form-group">
                          <%= f.submit "Log in", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
        <p>Or <%= link_to "Sign up", root_path, class: "link" %></p> 
    </div>
</div>