<h2 class="text-center">Sign up</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :user, url: users_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :username %>
                           <%= f.text_field :username, autofocus: true, autocomplete: 'user name', placeholder: "User name" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                          <%= f.submit "Sign up", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
    </div>
</div