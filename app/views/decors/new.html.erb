<%= decor_errors_msgs(@decor) %>
<h2 class="text-center">New Decor</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :decor, url: user_decors_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :name %>
                           <%= f.text_field :name, autofocus: true, autocomplete: 'group name', placeholder: "Decor name" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                           <%= f.label :price %>
                           <%= f.text_field :price, autofocus: true, autocomplete: 'group name', placeholder: "Decor price" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                         <%= f.collection_select(:category_ids, Category.all, :id, :name,
                            { prompt: "Select a category (you can leave it empty)"}, {class: "custom-select shadow rounded", multiple: true, size: 5 }) %>
                     </div>
                     <div class="form-group">
                          <%= f.submit "New Decor", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
    </div>
</div>