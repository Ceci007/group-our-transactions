<h2 class="text-center mt-2">New category for <%= @decor.name%></h2>
 <div class="row justify-content-center">
      <div class="col-4">
         <%= form_with scope: :decor_category, url: user_decor_decor_categories_path(@user, @decor), local: true do |f| %>
               <div class="form-group">
                <%= f.select :category_id, options_from_collection_for_select(available_categories(@decor), :id, :name), {include_blank: "Select Category"}, {class: "custom-select mb-1"} %>
              </div>
             <div class="form-group">
                <%= f.submit "New category", class: 'btn btn-primary btn-block' %>
             </div>
          <% end %>
      </div>
 </div>